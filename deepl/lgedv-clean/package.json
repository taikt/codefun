{
  "name": "lgedv-clean",
  "displayName": "LGEDV Clean CodeGuard",
  "description": "Simple C++ code analysis with Copilot streaming",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lgedv.checkLGEDVRules",
        "title": "üéØ Check LGEDV Rules",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.checkMISRARules", 
        "title": "üõ°Ô∏è Check MISRA Rules",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.checkCERTRules", 
        "title": "üîê Check Certcpp Rules",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.checkRapidScanRules", 
        "title": "‚ö° Check RapidScan Rules",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.checkAllRules",
        "title": "üîç Check Critical Rules",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.interactiveCheck",
        "title": "‚ú® Choose Rules to Check...",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.generateRulePrompt",
        "title": "üìù Generate LGEDV Prompt",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.generateMisraPrompt",
        "title": "üìù Generate MISRA Prompt",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.generateCertCppPrompt",
        "title": "üìù Generate CERT C++ Prompt",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.generateRapidScanPrompt",
        "title": "üìù Generate RapidScan Prompt",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.generateCriticalRulePrompt",
        "title": "üìù Generate Critical Rule Prompt",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.generateHTMLReport",
        "title": "üåê Generate Interactive HTML Report",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.openSettings",
        "title": "‚öôÔ∏è Open Settings",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.showConfiguration",
        "title": "üìã Show Current Configuration",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.checkStaticAnalysis",
        "title": "üîß Check Rules by Static Analysis",
        "category": "LGEDV CodeGuard"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "lgedv.codeGuardSubmenu",
          "when": "resourceLangId == cpp",
          "group": "1_modification@1"
        }
      ],
      "lgedv.codeGuardSubmenu": [
        {
          "command": "lgedv.interactiveCheck",
          "group": "1_main@1"
        },
        {
          "command": "lgedv.checkLGEDVRules", 
          "group": "2_specific@1"
        },
        {
          "command": "lgedv.checkMISRARules",
          "group": "2_specific@2"
        },
        {
          "command": "lgedv.checkCERTRules",
          "group": "2_specific@3"
        },
        {
          "command": "lgedv.checkRapidScanRules",
          "group": "2_specific@4"
        },
        {
          "command": "lgedv.checkAllRules",
          "group": "2_specific@5"
        },
        {
          "submenu": "lgedv.generatePromptSubmenu",
          "group": "3_tools@1"
        },
        {
          "command": "lgedv.checkStaticAnalysis",
          "group": "3_tools@2"
        }
      ],
      "lgedv.generatePromptSubmenu": [
        {
          "command": "lgedv.generateRulePrompt",
          "group": "1_prompt@1"
        },
        {
          "command": "lgedv.generateMisraPrompt",
          "group": "1_prompt@2"
        },
        {
          "command": "lgedv.generateCertCppPrompt",
          "group": "1_prompt@3"
        },
        {
          "command": "lgedv.generateRapidScanPrompt",
          "group": "1_prompt@4"
        },
        {
          "command": "lgedv.generateCriticalRulePrompt",
          "group": "1_prompt@5"
        }
      ]
    },
    "submenus": [
      {
        "id": "lgedv.codeGuardSubmenu",
        "label": "üõ°Ô∏è LGEDV CodeGuard"
      },
      {
        "id": "lgedv.generatePromptSubmenu",
        "label": "üìù Generate Prompt"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "LGEDV CodeGuard Configuration",
      "properties": {
        "lgedvCodeGuard.reportDirectory": {
          "type": "string",
          "default": "/home/worker/src/codeguard/web_srv/defect_report",
          "description": "Directory where analysis reports will be saved. This path will be used for both Markdown and HTML reports.",
          "scope": "window"
        },
        "lgedvCodeGuard.webServerDirectory": {
          "type": "string", 
          "default": "/home/worker/src/codeguard/web_srv",
          "description": "Directory where the web server is located. Used for opening reports in browser.",
          "scope": "window"
        },
        "lgedvCodeGuard.ruleSetDirectory": {
          "type": "string",
          "default": "",
          "description": "Custom directory for rule files. Leave empty to use the default extension rule set.",
          "scope": "window"
        },
        "lgedvCodeGuard.autoOpenBrowser": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open HTML reports in browser after analysis.",
          "scope": "window"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
