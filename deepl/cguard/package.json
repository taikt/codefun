{
  "name": "lgedv-codeguard",
  "icon":"src/logo.svg",
  "displayName": "Code Guard",
  "publisher": "TranAnhTai-LGE",
  "description": "Simple C++ code analysis with Copilot streaming",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:lgedv.checkLGEDVRules",
    "onCommand:lgedv.checkMISRARules",
    "onCommand:lgedv.checkCERTRules",
    "onCommand:lgedv.checkRapidScanRules",
    "onCommand:lgedv.checkAllRules",
    "onCommand:lgedv.interactiveCheck",
    "onCommand:lgedv.generateLGEDVPrompt",
    "onCommand:lgedv.generateMisraPrompt",
    "onCommand:lgedv.generateCertCppPrompt",
    "onCommand:lgedv.generateRapidScanPrompt",
    "onCommand:lgedv.generateCriticalRulePrompt",
    "onCommand:lgedv.generateHTMLReport",
    "onCommand:lgedv.openSettings",
    "onCommand:lgedv.showConfiguration",
    "onCommand:lgedv.checkStaticAnalysis",
    "onCommand:lgedv.checkMultipleFilesLGEDV",
    "onCommand:lgedv.checkMultipleFilesMISRA",
    "onCommand:lgedv.checkMultipleFilesCERT",
    "onCommand:lgedv.checkMultipleFilesCritical",
    "onCommand:lgedv.startWebServer",
    "onCommand:lgedv.stopWebServer",
    "onCommand:lgedv.restartWebServer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lgedv.checkLGEDVRules",
        "title": "üéØ Check LGEDV Rule for open file",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.checkMISRARules", 
        "title": "üõ°Ô∏è Check MISRA Rule for open file",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.checkCERTRules", 
        "title": "üîê Check Certcpp Rule for open file",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.checkCustomRule",
        "title": "üß© Check custom rule for open file",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.interactiveCheck",
        "title": "‚ú® Choose Rules to Check...",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.generateLGEDVPrompt",
        "title": "üìù Generate LGEDV Prompt",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.generateMisraPrompt",
        "title": "üìù Generate MISRA Prompt",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.generateCertCppPrompt",
        "title": "üìù Generate CERT C++ Prompt",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.generateCustomRulePrompt",
        "title": "üìù Generate custom rule prompt",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.openSettings",
        "title": "‚öôÔ∏è Open Settings",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.showConfiguration",
        "title": "üìã Show Current Configuration",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.checkStaticAnalysis",
        "title": "üîß Check Rules by Static Analysis",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.checkMultipleFilesLGEDV",
        "title": "üéØ Check LGEDV Rule for files",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.checkMultipleFilesMISRA",
        "title": "üõ°Ô∏è Check MISRA Rule for files",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.checkMultipleFilesCERT",
        "title": "üîê Check Certcpp Rule for files",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.startWebServer",
        "title": "üåê Start Web Server",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.stopWebServer",
        "title": "üõë Stop Web Server",
        "category": "LGEDV CodeGuard"
      },
      {
        "command": "lgedv.restartWebServer",
        "title": "üîÑ Restart Web Server",
        "category": "LGEDV CodeGuard"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "lgedv.codeGuardSubmenu",
          "when": "resourceLangId == cpp",
          "group": "1_modification@1"
        }
      ],
      "lgedv.codeGuardSubmenu": [
        {
          "command": "lgedv.interactiveCheck",
          "group": "1_main@1"
        },
        {
          "command": "lgedv.checkLGEDVRules", 
          "group": "2_specific@1"
        },
        {
          "command": "lgedv.checkMISRARules",
          "group": "2_specific@2"
        },
        {
          "command": "lgedv.checkCERTRules",
          "group": "2_specific@3"
        },
        {
          "command": "lgedv.checkCustomRule",
          "group": "2_specific@4"
        },
        {
          "submenu": "lgedv.generatePromptSubmenu",
          "group": "3_tools@1"
        },
        {
          "command": "lgedv.checkStaticAnalysis",
          "group": "3_tools@2"
        },
        {
          "command": "lgedv.checkMultipleFilesLGEDV",
          "group": "3_tools@3"
        },
        {
          "command": "lgedv.checkMultipleFilesMISRA",
          "group": "3_tools@4"
        },
        {
          "command": "lgedv.checkMultipleFilesCERT",
          "group": "3_tools@5"
        }
      ],
      "lgedv.generatePromptSubmenu": [
        {
          "command": "lgedv.generateLGEDVPrompt",
          "group": "1_prompt@1"
        },
        {
          "command": "lgedv.generateMisraPrompt",
          "group": "1_prompt@2"
        },
        {
          "command": "lgedv.generateCertCppPrompt",
          "group": "1_prompt@3"
        },
        {
          "command": "lgedv.generateCustomRulePrompt",
          "group": "1_prompt@6"
        }
      ]
    },
    "submenus": [
      {
        "id": "lgedv.codeGuardSubmenu",
        "label": "üõ°Ô∏è LGEDV CodeGuard"
      },
      {
        "id": "lgedv.generatePromptSubmenu",
        "label": "üìù Generate Prompt"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "LGEDV CodeGuard Configuration",
      "properties": {
        "lgedvCodeGuard.reportDirectory": {
          "type": "string",
          "default": "${workspaceFolder}/defect_report",
          "description": "Directory where analysis reports will be saved. This path will be used for both Markdown and HTML reports.",
          "scope": "window"
        },
        "lgedvCodeGuard.webServerDirectory": {
          "type": "string",
          "default": "${workspaceFolder}/web_srv",
          "description": "Directory where the web server is located. Used for opening reports in browser.",
          "scope": "window"
        },
        "lgedvCodeGuard.ruleSetDirectory": {
          "type": "string",
          "default": "",
          "description": "Custom directory for rule files. Leave empty to use the default extension rule set.",
          "scope": "window"
        },
        "lgedvCodeGuard.autoOpenBrowser": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open HTML reports in browser after analysis.",
          "scope": "window"
        },
        "lgedvCodeGuard.customRuleFile": {
          "type": "string",
          "default": "",
          "description": "Path to the custom rule markdown file. Leave empty to disable custom rule checking.",
          "scope": "window"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run copy-rules",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "copy-rules": "cp -r src/rule_set out/rule_set"
  },
  "files": [
    "out",
    "out/rule_set",
    "src/web_srv"
  ],
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
