int fn(vector<int>& a){
    int l=0,r=0;
    n=a.size();
    while(l<=n){
        while(thoa_man_dk_tang_cua_so){
            r++;// tang cua so sang phai
        }
        // kiem tra ket qua

        l++; // dich cua so trai
        //update trang thai khi dich cua so trai
    }

}


