{
  "name": "lgedv-code-guard",
  "icon":"src/icon.png",
  "publisher": "TranAnhTai-LGE",
  "displayName": "LGEDV Code Guard",
  "description": "Check C++ Vulnerability",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:lgedv.checkRules",
    "onCommand:lgedv.checkStaticViolations",
    "onCommand:lgedv.checkAIViolations",
    "onCommand:lgedv.checkRulesByCopilot"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lgedv.checkStaticAll",
        "title": "LGEDV-CodeGuard by static analysis"
      },
      {
        "command": "lgedv.checkCppVulnByCopilot",
        "title": "LGEDV-CodeGuard by Copilot"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "lgedv.checkStaticAll",
          "when": "resourceExtname == .cpp || resourceExtname == .h || resourceExtname == .hpp || resourceExtname == .cxx || resourceExtname == .cc",
          "group": "navigation"
        },
        {
          "command": "lgedv.checkCppVulnByCopilot",
          "when": "resourceExtname == .cpp || resourceExtname == .h || resourceExtname == .hpp || resourceExtname == .cxx || resourceExtname == .cc",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "lgedv.checkStaticAll",
          "when": "editorLangId == cpp",
          "group": "navigation"
        },
        {
          "command": "lgedv.checkCppVulnByCopilot",
          "when": "editorLangId == cpp",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}